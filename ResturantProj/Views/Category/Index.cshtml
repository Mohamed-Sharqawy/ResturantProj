@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="AddCat" class="btn btn-outline-primary"> Add New Category</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Category Name</th>
            <th scope="col">Category Status</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Category category in Model)
        {
            <tr>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.IsActive
                </td>
                <td>
                    <img src="@category.ImgUrl" width="80px" height="80px" class="img-thumbnail"/>
                </td>
                <td>
                    <a asp-action="GetDishes" asp-route-id="@category.Id" class="btn btn-outline-primary"> Dishes </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-secondary"> Edit </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger"> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>


